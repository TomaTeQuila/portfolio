    }

    .language-level {
        min-width: 80px;
        font-size: 0.8rem;
        color: #64748b;
    }

    /* Contact CTA */
    .contact-cta {
        text-align: center;
        background: linear-gradient(135deg, #1e293b, #334155);
        padding: 4rem;
        border-radius: 30px;
        color: white;
    }

    .contact-cta h2 {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
    }

    .contact-cta p {
        font-size: 1.1rem;
        opacity: 0.8;
        margin-bottom: 3rem;
    }

    .contact-info {
        display: flex;
        justify-content: center;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .contact-btn {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 1rem 2rem;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50px;
        color: white;
