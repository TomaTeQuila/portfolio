    }

    /* Responsive */
    @media (max-width: 768px) {
        .services-header h2 {
            font-size: 2.5rem;
        }

        .services-grid {
            grid-template-columns: 1fr;
        }

        .experience-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .experience-left h2 {
            font-size: 2.3rem;
        }

        .contact-cta {
            padding: 2rem;
        }

        .contact-cta h2 {
            font-size: 2rem;
        }

        .contact-info {
            flex-direction: column;
            align-items: center;
        }

        .tech-tags {
            justify-content: center;
        }
    }
</style>