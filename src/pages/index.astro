    }

    .tech-category h4 {
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .tech-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        padding: 0.5rem 1rem;
        background: #e2e8f0;
        border-radius: 25px;
        font-size: 0.8rem;
        font-weight: 600;
        color: #475569;
