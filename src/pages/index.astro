        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .education-item {
        margin-bottom: 1.5rem;
    }

    .education-item h4 {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.3rem;
    }

    .education-item p {
        color: #64748b;
        font-size: 0.9rem;
    }

    /* Languages Section */
    .languages-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .language-item {
        display: flex;
