<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Services Section */
    .services {
        background: #1a1a2e;
        padding: 6rem 0;
        position: relative;
    }

    .services::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Ccircle cx='30' cy='30' r='1'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    }

    .services-header {
        text-align: center;
        margin-bottom: 4rem;
    }

    .services-header h2 {
        font-size: 4rem;
        font-weight: 800;
        color: white;
        line-height: 1.1;
        margin-bottom: 2rem;
    }

    .highlight {
        background: linear-gradient(135deg, #a855f7, #3b82f6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .service-card {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 20px;
        padding: 2rem;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease;
    }

    .service-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.1);
    }

    .service-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .service-card h3 {
        color: white;
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .service-card p {
        color: rgba(255, 255, 255, 0.7);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .service-link {
        color: #a855f7;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .service-link:hover {
        color: #3b82f6;
    }

    /* Experience Section */
    .experience {
        background: #f8fafc;
        padding: 6rem 0;
    }

    .experience-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;
    }

    .experience-left h2 {
        font-size: 3rem;
        font-weight: 800;
        color: #1e293b;
        margin-bottom: 3rem;
        line-height: 1.1;
    }

    /* Job Timeline */
    .job-timeline {
        position: relative;
    }

    .job-timeline::before {
        content: '';
        position: absolute;
        left: 20px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(135deg, #a855f7, #3b82f6);
    }

    .job-item {
        position: relative;
        padding-left: 60px;
        margin-bottom: 3rem;
    }

    .job-item::before {
        content: '';
        position: absolute;
        left: 14px;
        top: 8px;
        width: 12px;
        height: 12px;
        background: #a855f7;
        border-radius: 50%;
        border: 3px solid #f8fafc;
    }

    .job-item.current::before {
        background: linear-gradient(135deg, #a855f7, #3b82f6);
        box-shadow: 0 0 20px rgba(168, 85, 247, 0.5);
    }

    .job-badge {
        display: inline-block;
        background: linear-gradient(135deg, #a855f7, #3b82f6);
        color: white;
        padding: 0.3rem 1rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .job-content h3 {
        font-size: 1.3rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .company {
        color: #a855f7;
        font-weight: 600;
        margin-bottom: 0.3rem;
    }

    .period {
        color: #64748b;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .description {
        color: #475569;
        line-height: 1.6;
    }

    /* Skills Section */
    .skills-section {
        background: white;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .skills-section h3,
    .education-section h3,
    .languages-section h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        margin-bottom: 1.5rem;
    }

    .tech-category {
