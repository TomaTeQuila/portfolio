    }

    .language-name {
        min-width: 70px;
        font-weight: 600;
        color: #1e293b;
        font-size: 0.9rem;
    }

    .language-bar {
        flex: 1;
        height: 8px;
        background: #e2e8f0;
        border-radius: 10px;
        overflow: hidden;
    }

    .language-fill {
        height: 100%;
        border-radius: 10px;
        transition: width 0.3s ease;
    }

    .language-fill.native {
        width: 100%;
        background: linear-gradient(135deg, #a855f7, #3b82f6);
    }

    .language-fill.intermediate {
        width: 70%;
        background: linear-gradient(135deg, #10b981, #059669);
    }

	.language-fill.medianamente {
        width: 50%;
